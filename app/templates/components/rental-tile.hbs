<li>
  {{#link-to 'rental' rental.id class="link-to-rental"}}{{rental.owner}}'s {{rental.type}} in {{rental.city}}{{/link-to}}
  {{#if isImageShowing}}
    <p><img src={{rental.image}} alt={{rental.type}} {{action 'imageHide'}}></p>
  {{else}}
    <button class="rental-tile btn btn-success btn-sm" {{action 'imageShow'}}>Show image</button>
  {{/if}}
</li>
